{
  "diagnostic.checkCurrentLine": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextLimitInOneLine": 1,
  "coc.preferences.renameFillCurrent": false,
  "diagnostic.messageDelay": 200,
  "dialog.rounded": true,
  "languageserver": {
    "arduino": {
      "command": "arduino-language-server",
      "rootPatterns": ["*.ino"],
      "filetypes": ["arduino"],
      "args": [
        "-clangd",
        "/usr/bin/clangd",
        "-cli",
        "/opt/homebrew/bin/arduino-cli",
        "-cli-config",
        "/Users/avah/Library/Arduino15/arduino-cli.yaml",
        "-fqbn",
        "arduino:avr:uno",
      ]
    }
  }
}
