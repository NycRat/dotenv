{
  "diagnostic.checkCurrentLine": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextLimitInOneLine": 1,
  "coc.preferences.renameFillCurrent": false,
  "diagnostic.messageDelay": 200,
  "dialog.rounded": true,
  "languageserver": {
    "arduino": {
      "command": "~/.local/bin/arduino-language-server",
      "rootPatterns": ["*.ino"],
      "filetypes": ["arduino"],
      "args": [
        "-cli",
        "/opt/homebrew/bin/arduino-cli",
        "-clangd",
        "/usr/bin/clangd",
        "-cli-config",
        "~/Library/Arduino15/arduino-cli.yaml"
      ]
    }
  }
}
